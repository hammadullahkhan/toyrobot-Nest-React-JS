{
  "name": "toy-robot-simulator",
  "version": "1.0.0",
  "scripts": {
    "install:server": "cd server && npm install",
    "install:clientReact": "cd clientReact && npm install",
    "install:all": "npm run install:server && npm run install:clientReact",
    "start:server": "cd server && npm run start:dev",
    "start:clientReact": "cd clientReact && npm start",
    "dev": "concurrently \"npm run start:server\" \"npm run start:clientReact\"",    
    "dev:both": "concurrently \"npm run start:server\" \"npm run start:clientReact\" "
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "@nestjs/typeorm": "^9.0.1",
    "sqlite3": "^5.1.4",
    "typeorm": "^0.3.12"
  }
}
